{
  "tags": [
    {
      "name": "Event",
      "description": "Operations related to Events resource"
    }
  ],
  "components": {
    "schemas": {
      "EventInputBody": {
        "type": "object",
        "properties": {
          "match": {
            "type": "string"
          },
          "team": {
            "type": "string"
          },
          "player": {
            "type": "string"
          },
          "details": {
            "type": "object",
            "properties": {
              "foulType": {
                "type": "string",
                "enum": [
                  "Personal",
                  "Technical",
                  "Flagrant"
                ]
              },
              "shotType": {
                "type": "string",
                "enum": [
                  "2P",
                  "3P",
                  "FT",
                  "Layup",
                  "Dunk"
                ]
              },
              "reboundType": {
                "type": "string",
                "enum": [
                  "Offensive",
                  "Defensive"
                ]
              },
              "outcome": {
                "type": "string",
                "enum": [
                  "Made",
                  "Missed",
                  "Blocked"
                ]
              },
              "location": {
                "type": "object",
                "properties": {
                  "x": {
                    "type": "number"
                  },
                  "y": {
                    "type": "number"
                  }
                }
              },
              "assist": {
                "type": "string"
              }
            }
          },
          "type": {
            "type": "string",
            "enum": [
              "Foul",
              "Shot",
              "Rebound",
              "Assist",
              "Turnover",
              "Block",
              "Steal"
            ]
          },
          "comments": {
            "type": "string"
          },
          "timestamps": {
            "type": "object",
            "properties": {
              "start": {
                "type": "number"
              },
              "end": {
                "type": "number"
              }
            }
          }
        }
      },
      "Details": {
        "type": "object",
        "properties": {
          "foulType": {
            "type": "string",
            "enum": [
              "Personal",
              "Technical",
              "Flagrant"
            ]
          },
          "shotType": {
            "type": "string",
            "enum": [
              "2P",
              "3P",
              "FT",
              "Layup",
              "Dunk"
            ]
          },
          "reboundType": {
            "type": "string",
            "enum": [
              "Offensive",
              "Defensive"
            ]
          },
          "outcome": {
            "type": "string",
            "enum": [
              "Made",
              "Missed",
              "Blocked"
            ]
          },
          "location": {
            "type": "object",
            "properties": {
              "x": {
                "type": "number",
                "format": "int32"
              },
              "y": {
                "type": "number",
                "format": "int32"
              }
            }
          },
          "assist": {
            "$ref": "#/components/schemas/Player"
          }
        }
      },
      "Event": {
        "required": [
          "match",
          "team",
          "player",
          "type",
          "details"
        ],
        "type": "object",
        "properties": {
          "match": {
            "$ref": "#/components/schemas/Match"
          },
          "team": {
            "$ref": "#/components/schemas/Team"
          },
          "player": {
            "$ref": "#/components/schemas/Player"
          },
          "details": {
            "$ref": "#/components/schemas/Details"
          },
          "type": {
            "type": "string",
            "enum": [
              "Foul",
              "Shot",
              "Rebound",
              "Assist",
              "Turnover",
              "Block",
              "Steal"
            ]
          },
          "comments": {
            "type": "string"
          },
          "timestamps": {
            "type": "object",
            "properties": {
              "start": {
                "type": "number",
                "format": "int32"
              },
              "end": {
                "type": "number",
                "format": "int32"
              }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/events": {
      "get": {
        "summary": "Get events",
        "tags": [
          "Event"
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/idParam"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/SuccessResponse"
          }
        }
      },
      "post": {
        "summary": "Create event",
        "tags": [
          "Event"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EventInputBody"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/SuccessResponse"
          }
        }
      }
    },
    "events/{_id}": {
      "get": {
        "summary": "Get event by id",
        "tags": [
          "Event"
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/idParam"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/SuccessResponse"
          }
        }
      },
      "put": {
        "summary": "Update event",
        "tags": [
          "Event"
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/idParam"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EventInputBody"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/SuccessResponse"
          }
        }
      },
      "delete": {
        "summary": "Delete event",
        "tags": [
          "Event"
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/idParam"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/SuccessResponse"
          }
        }
      }
    }
  }
}
{
  "tags": [
    {
      "name": "Players",
      "description": "Operations related to Players resource"
    }
  ],
  "components": {
    "schemas": {
      "Player": {
        "required": [
          "name",
          "jerseyNumber",
          "position"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "avatar": {
            "type": "string"
          },
          "jerseyNumber": {
            "type": "string"
          },
          "position": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "PG",
                "SG",
                "SF",
                "PF",
                "C"
              ]
            }
          }
        }
      },
      "PlayerInput": {
        "required": [
          "name",
          "jerseyNumber",
          "position"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "avatar": {
            "type": "string"
          },
          "jerseyNumber": {
            "type": "string"
          },
          "position": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "PG",
                "SG",
                "SF",
                "PF",
                "C"
              ]
            }
          }
        }
      }
    }
  },
  "paths": {
    "/players": {
      "get": {
        "summary": "Get players",
        "tags": [
          "Players"
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/SuccessResponse"
          }
        }
      },
      "post": {
        "summary": "Create player",
        "tags": [
          "Players"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PlayerInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/SuccessResponse"
          }
        }
      }
    },
    "/players/{_id}": {

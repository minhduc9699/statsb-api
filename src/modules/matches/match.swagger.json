          },
          "rebounds": {
            "type": "number"
          },
          "assists": {
            "type": "number"
          },
          "steals": {
            "type": "number"
          },
          "blocks": {
            "type": "number"
          },
          "turnovers": {
            "type": "number"
          },
          "fouls": {
            "type": "number"
          }
        }
      },
      "TimelineEvent": {
        "type": "object",

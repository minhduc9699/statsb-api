              },
              "fouledPlayer": {
                "$ref": "#/components/schemas/Player"
              },
              "otherTeamPlayer": {
                "$ref": "#/components/schemas/Player"
              }
            }
          }
        }
      },
      "MatchEvent": {
        "type": "object",

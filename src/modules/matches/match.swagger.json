          "homeTeam": {
            "$ref": "#/components/schemas/Team"
          },
          "awayTeam": {
            "$ref": "#/components/schemas/Team"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "status": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "MatchInput": {
        "type": "object",
        "properties": {
          "homeTeam": {
            "type": "string",
            "description": "Team ID"
          },
          "awayTeam": {
            "type": "string",
            "description": "Team ID"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "gameType": {
            "type": "string",
            "enum": [
              "1v1",
              "2v2",
              "3v3",
              "4v4",
              "5v5"
            ]
          },
          "status": {
            "type": "string",
            "enum": [
              "Upcoming",
              "Ongoing",
              "Completed"
            ]
          },
          "videoUrl": {
            "type": "string"
          }
        },
        "required": [
          "homeTeam",
          "awayTeam",
          "date"
        ]
      },
      "Team": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
